<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="titleTextColor">#FFF</item>
    </style>

    <style name="AppThemeNoBar" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="titleTextColor">#FFF</item>
    </style>



    <style name="MyButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_setting</item>
        <item name="android:layout_margin">0dp</item>

    </style>

</resources>
