<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@color/colorBackground"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            style="@style/MyButtonStyle"
            android:background="@color/colorBackground"
            android:text="X"
            android:textSize="24sp"
            android:layout_alignParentLeft="true"
            android:id="@+id/btn_city_item_delete"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fl_city_item_click_to_watch"
            android:layout_toRightOf="@id/btn_city_item_delete">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_city_item_city_name"
                android:layout_margin="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="Test"
                android:textSize="@dimen/CityItemCityNameSize"
                android:textColor="@color/colorCityItemCityName"
                />
        </FrameLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>