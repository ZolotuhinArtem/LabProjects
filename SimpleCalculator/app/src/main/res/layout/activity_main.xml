<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground"
    tools:context="com.example.artem.simplecalculator.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lin_cal"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_calc_result"
                android:textSize="30sp"
                android:textColor="@color/colorResultText"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_calc_work"
                android:textColor="@color/colorWorkText"
                android:textSize="40sp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_clear"
                android:text="clear"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_mult"
                android:text="*"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_div"
                android:text="/"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_delete"
                android:text="DELETE"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_7"
                android:text="7"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_8"
                android:text="8"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_9"
                android:text="9"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_add"
                android:text="+"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_4"
                android:text="4"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_5"
                android:text="5"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_6"
                android:text="6"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_sub"
                android:text="-"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_1"
                android:text="1"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_2"
                android:text="2"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_3"
                android:text="3"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_cal_0"
                android:text="0"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_cal_dot"
                android:layout_weight="1"
                android:text="."
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_cal_result"
                android:layout_weight="1"
                android:text="="
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"/>

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>